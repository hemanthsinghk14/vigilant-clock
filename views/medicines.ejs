<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medicines List</title>
    <!-- Link to Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<style>
    
</style>
<body class="container mt-4">
    <h1 class="mb-4">Medicines List</h1>

    <!-- Create Button -->
    <a href="/createNewMed" class="btn btn-success mb-2">Create New Medicine</a>
    <a href="/expiryAlerts" class="btn btn-success mb-2">new expiry alerts</a>

    <ul class="list-group">
        <% medicines.forEach(medicine=> { %>
            <li class="list-group-item clickable" data-medicine-id="<%= medicine.medicine_id %>">
                <div class="d-flex justify-content-between align-items-center">
                    <strong>
                        <%= medicine.medicine_name %>
                    </strong>
                    <span class="badge badge-primary badge-pill">
                        <%= medicine.quantity %>
                    </span>
                </div>
                <p class="mb-1">Expiry Date: <%= medicine.expiry_date %>
                </p>
                <!-- Add more details as needed -->
            </li>
            <% }); %>
    </ul>

    <!-- Link to Bootstrap JS and Popper.js -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Add click event listener to clickable items
            const clickableItems = document.querySelectorAll('.clickable');
            clickableItems.forEach(item => {
                item.addEventListener('click', function () {
                    const medicineId = this.getAttribute('data-medicine-id');
                    window.location.href = '/medicines/' + medicineId; // Adjust the URL as needed
                });
            });
        });
    </script>
</body>

</html>